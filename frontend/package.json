{
	"name": "frontend",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint . && prettier --check .",
		"format": "prettier --write .",
		"start": "lsof -ti:5173 | xargs kill -9 || true && vite dev & open-cli http://localhost:5173"
	},
	"engines": {
		"node": ">=22.14.0",
		"npm": ">=10.9.2"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@skeletonlabs/skeleton": "^3.1.0",
		"@skeletonlabs/skeleton-svelte": "^1.0.0",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.20.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/vite": "^4.0.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.3.1",
		"globals": "^16.0.0",
		"lucide-svelte": "^0.482.0",
		"open-cli": "^8.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.23.1",
		"svelte-check": "^4.1.5",
		"sveltekit-superforms": "^2.24.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.0.0",
		"zod": "^3.24.2"
	},
	"dependencies": {
		"@cartamd/plugin-code": "^4.1.1",
		"@cartamd/plugin-emoji": "^4.3.0",
		"@cartamd/plugin-slash": "^4.2.0",
		"carta-md": "^4.8.1",
		"isomorphic-dompurify": "^2.22.0"
	}
}
